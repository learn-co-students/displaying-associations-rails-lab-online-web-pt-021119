<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :artist_id %>
  <%= f.fields_for :artist do |artist| %>
    <%= artist.collection_select(:artist_id, Artist.all, :id, :name) %> 
    <br>
  <% end %>

  <%= f.submit %>

<% end %>
