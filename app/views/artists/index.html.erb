<h1>Artists</h1>

<ul>
    <% @artists.each do |artist| %>
    <li>

      <p><%= artist.name %></p>

      <p><%= pluralize(artist.song_count, 'song') %></p>
      <ul>
        <% artist.songs.each do |song| %>
          <li><%= link_to song.title, song_path(song) %></li>
        <% end %>
      </ul>

    </li>

    <% end %>

</ul>
